@model SistemaWeb.Models.Alquiler

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align:center;font-size:30px;color:aliceblue; font-family:'Times New Roman';">Registro de Alquiler / Reserva</h1>

<h4>Alquiler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numero_Recibo" class="control-label"></label>
                <input asp-for="Numero_Recibo" class="form-control" />
                <span asp-validation-for="Numero_Recibo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad_Hora" class="control-label"></label>
                <input asp-for="Cantidad_Hora" class="form-control" />
                <span asp-validation-for="Cantidad_Hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desde" class="control-label"></label>
                <input asp-for="Desde" class="form-control" />
                <span asp-validation-for="Desde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hasta" class="control-label"></label>
                <input asp-for="Hasta" class="form-control" />
                <span asp-validation-for="Hasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo_Total" class="control-label"></label>
                <input asp-for="Costo_Total" class="form-control" />
                <span asp-validation-for="Costo_Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control">
                    <option value="">Seleccione...</option>
                    <option value="1">Alquilado</option>
                    <option value="2">Reservado</option>

                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CanchaId" class="control-label"></label>
                <select asp-for="CanchaId" class ="form-control" asp-items="ViewBag.CanchaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<style>

    .row {
        width: 600px;
        height: 750px;
        border-radius: 25px;
        backdrop-filter: contrast(0.15);
        margin: auto;
    }

    .col-md-4 {
        margin: auto;
        background-position-x: center;
    }
</style>

<div>
    <a asp-action="Index">Volver</a>
</div>


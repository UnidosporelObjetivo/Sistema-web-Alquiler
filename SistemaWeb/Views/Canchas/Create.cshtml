@model SistemaWeb.Models.Cancha

@{
    ViewData["Title"] = "Create";
}

<h1  style="text-align:center;font-size:30px;color:aliceblue; font-family:'Times New Roman';">Registrar Cancha</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Capacidad" class="control-label"></label>
                <input asp-for="Capacidad" class="form-control" style="" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero_Cancha" class="control-label"></label>
                <input asp-for="Numero_Cancha" class="form-control" />
                <span asp-validation-for="Numero_Cancha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="volver">
    <a asp-action="Index" style="color:white">Volver</a>
</div>
<style>

    .row{
        width:600px;
        height:200px;
        border-radius:25px;
        backdrop-filter:contrast(0.15);
        margin:auto;
    }

    .col-md-4{
        margin:auto;
        background-position-x:center; 
    }

    .volver {
        width: 97px;
        height: 40px;
        text-align: center;
        border: 3px solid black;
        border-radius: 15px;
        background-color: #ffbb00;
        margin: 20px 200px;
        text-decoration: none;
      
    }
</style>



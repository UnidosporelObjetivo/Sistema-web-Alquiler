@model SistemaWeb.Models.Cancha

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4 style="text-align:center;font-weight:700;color:aliceblue;margin-top:18px; font-family:'Times New Roman';">Detalles de la Cancha</h4>
    <hr />

    <div class="col-md-4">
        <div >
        <div class="col-4 col-sm-4" style="margin:auto">
            @if(Model.Foto !=null)
            {
                <img src="~/fotos/@Model.Foto" class=" img-thumbnail" width="180px" />
            }
        </div>
        <div class="col-4 col-sm-4"> </div>


            <dl class="row" style="margin:auto;text-align:center">
        

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Numero_Cancha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numero_Cancha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto)
        </dd>
    </dl>
    </div>
    </div>
</div>
<div class="volve">
    
    <a asp-action="Index">Volver</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Modificar</a> 
</div>

<style>
    body {
    }

    .col-md-4 {
        background-position: center;
        border-radius: 25px;
        margin: auto;
        backdrop-filter: contrast(0.17);
    }

    .volver {
        width: 100px;
        height: 40px;
        text-align: center;
        border: 3px solid black;
        border-radius: 15px;
        background-color: #ffbb00;
        margin: 20px 200px;
        text-decoration: none;
    }

    .volve a{
        width: 400px;
        height: 90px;
        margin:auto;
        text-align: center;
        border: 3px solid black;
        border-radius: 15px;
        background-color: #ffbb00;
        margin: 20px 200px;
        text-decoration: none;
    }

    .modificar {
        width: 100%;
        height: 60px;
    }

    .btn {
        width: 100%;
        height: 30px;
        margin-top: 20px;
        background-color: #0b4c8a;
    }

    .parrafo {
        width: 180px;
        height: 40px;

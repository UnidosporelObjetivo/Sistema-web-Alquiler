@model SistemaWeb.Models.Cancha

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align:center;text-size-adjust:20px;font-family:'Times New Roman'; color:white;">Eliminar</h1>
<link href="~/css/estilo.css" rel="stylesheet" />
<h3 style="text-align:center;;font-family:'Times New Roman'; color:white;">¿Estás seguro que quieres eliminar esto?</h3>
<div class="col-md-4">
    <h4 style="text-align:center;">Cancha</h4>
    <hr />
    <dl class="row" style="text-align:center;">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacidad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Numero_Cancha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numero_Cancha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FotoFile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FotoFile)
        </dd>
    </dl>
    <div class="row">
        <div class="col-4 col-sm-4">
            @if (Model.Foto != null)
            {
                <img src="~/fotos/@Model.Foto" class=" img-thumbnail" width="180px" />
            }
        </div>
        <div class="col-4 col-sm-4"> </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn" />  
    </form>
    
    
</div>
<div class="volver">
    <a asp-action="Index">Volver</a>
</div>


@model SistemaWeb.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1 style="text-align:center;text-size-adjust:20px;font-family:'Times New Roman'; color:white;">Eliminar Cliente</h1>

<h3 style="text-align:center;backdrop-filter:contrast(0.2);font-family:'Times New Roman'; color:red;">
    ¿Estás seguro que quieres eliminar esto?
</h3>
<div class="col-md-4">
    <h4 style="text-align:center">Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ci)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ci)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Aceptar" class="btn" /> |
     
    </form>
</div>
<div class="volver">
    <a asp-action="Index">Volver</a>
</div>
<style>
    body {
    }

    .col-md-4 {
        background-position: center;
